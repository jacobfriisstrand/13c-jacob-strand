---
const { hours } = Astro.props;
const { category } = Astro.props;
const { previous } = Astro.props;
---

<div class="time-card-container">
    <div class="time-card">
        <div class="time-card__header">
            <p>{category}</p>
            <span class="material-symbols-outlined">
            more_horiz
            </span>
        </div>
        <div class="time-card__main">
            <p>{hours}hrs</p>
            <p>Last week: {previous}hrs</p>
        </div>
    </div>
</div>

<style>

.time-card-container {
    container-type: inline-size;
}

.time-card > :not(:first-child) {
    padding: 1rem;
}

    .time-card {
        background-color: var(--primary);
 
        border-radius: var(--border-radius-outer);
        box-shadow: var(--box-shadow);
        min-height: 100%;
        display: flex;
        flex-direction: column;
    }

.time-card .time-card__main p:nth-of-type(1) {
    font-size: var(--fs-h1);
}

.time-card .time-card__main p:nth-of-type(2) {
    color: var(--subtle-text);
}


    .time-card > :last-child {
        font-size: var(--fs-small);
    }

    .time-card__header {
        display: flex;
        place-items: center;
        justify-content: space-between;
        background-color: var(--secondary);
        padding: 1rem;
        border-radius: var(--border-radius-outer) var(--border-radius-outer) 0 0;
    }

    .time-card__main {
        display: flex;
        align-items: center;
        flex-direction: row;
        justify-content: space-between;
        margin-top: auto;

    }

    @container (width > 500px) {
    .time-card__main {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    }
    }


    @media (width > 1600px){
    .time-card__main {
       flex-direction: column;
       place-items: start;
    }

    }
</style>