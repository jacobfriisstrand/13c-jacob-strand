<style>
    main {
margin-inline: 1rem;
    }

    .grid-container {
        display: grid;
        gap: 2rem;
        grid-template-columns:
        repeat(auto-fit, minmax(300px, 1fr));
    }


    @media (width > 1500px) {
    .grid-col-span-2 {
        grid-column: span 2;
    }

     .grid-row-span-2 {
        grid-row: 1 / span 2;
        grid-column: 4;
    }

    .grid-container > :nth-child(3) {
        grid-row: 2;
    }

    }

    h1 + p {
        margin-block: 2rem;
    }
</style>